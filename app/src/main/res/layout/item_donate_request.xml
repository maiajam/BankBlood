<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/my_dimens_sss"
    android:paddingStart="@dimen/my_dimens_sss"
    tools:context=".ui.activites.HomeActivity"
    >

    <LinearLayout
        android:id="@+id/DonateReq_Item_Lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/layborder"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/DonateReq_Item_TV_BloodType"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="A"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DonateReq_Item_TV_txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:text="@string/NameReq" />

            <TextView
                android:id="@+id/DonateReq_Item_TV_txtHospName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:text="@string/Hosp" />

            <TextView
                android:id="@+id/DonateReq_Item_TV_txtCityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="10sp"
                android:layout_marginTop="5dp"
                android:text="@string/City" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DonateReq_Item_TV_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="@string/NameReq" />

            <TextView
                android:id="@+id/DonateReq_Item_TV_HospName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="@string/Hosp" />

            <TextView
                android:id="@+id/DonateReq_Item_TV_CityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:text="@string/City" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/DonateReq_Item_B_Detials"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="#EEEEEE"
                android:textColor="@color/colorPrimary"
                android:text="@string/Detial" />

            <Button
                android:id="@+id/DonateReq_Item_B_Call"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:layout_marginTop="5dp"
                android:background="@color/colorAccent"
                android:text="@string/Call"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>